<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".profile">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="210dp"
            android:src="@drawable/pro"
            tools:ignore="MissingConstraints" />
    <ImageView
        android:id="@+id/img"
        android:layout_height="150dp"
        android:layout_width="130dp"
        android:layout_marginLeft="25dp"
        android:layout_marginTop="15dp"
        android:layout_marginRight="10dp"
        android:src="@drawable/imag"
        android:scaleType="centerInside"
        />
    <TextView
        android:id="@+id/text1"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:text="Dheeraj Kotwani"
    android:layout_toRightOf="@id/img"
    android:layout_marginTop="55dp"
    android:textSize="22sp"
    android:textColor="#fff"
    android:textStyle="bold"
    android:typeface="serif"/>
    <TextView
        android:layout_below="@id/text1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="App Developer"
        android:layout_toRightOf="@id/img"
        android:layout_marginTop="5dp"
        android:textSize="17sp"
        android:textColor="#fff"
        android:textStyle="bold"
        android:typeface="serif"/>
    <Button
        android:id="@+id/but"
        android:onClick="insta"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:background="@drawable/backgrnd1"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="185dp"
        android:text=" +  Follow"
        android:textSize="15sp"
        android:padding="15dp"
        android:textColor="#0000A7"
        android:typeface="sans"
        />
    <LinearLayout

        android:id="@+id/lay2"
        android:layout_height="100dp"
        android:layout_width="wrap_content"
        android:orientation="horizontal"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/but"
        >
        <ImageView
            android:layout_width="85dp"
            android:layout_height="85dp"
            android:src="@drawable/call"
            android:layout_margin="5dp"
            android:background="@drawable/backgroundbut"
            android:alpha="0.5"
            android:onClick="call"
            />
        <ImageView
            android:onClick="git"
            android:layout_width="85dp"
            android:layout_height="85dp"
            android:src="@drawable/index"
            android:layout_margin="5dp"
            android:alpha="0.5"
            android:background="@drawable/backgroundbut"
            />
        <ImageView
            android:onClick="mail"
            android:layout_width="85dp"
            android:layout_height="85dp"
            android:src="@drawable/images"
            android:layout_margin="5dp"
            android:background="@drawable/backgroundbut"
            android:alpha="0.5"
            />



    </LinearLayout>
    <TextView
        android:id="@+id/bio"
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:text="BIO"
        android:layout_below="@id/lay2"
        android:layout_marginTop="20dp"
        android:background="#9984C2"
        android:textStyle="bold"
        android:textSize="30dp"
        android:textAlignment="center"
        android:textColor="#fff"
        android:typeface="serif"
        />
<TextView
    android:onClick="std"
    android:id="@+id/study"
    android:layout_height="wrap_content"
    android:layout_width="match_parent"
    android:layout_margin="15dp"
    android:layout_below="@+id/bio"
    android:text="Pursuing B.Tech in Information Technology department from JSS Academy Of Technical Education Noida"
    android:textColor="#000"
    android:textSize="20sp"
    android:typeface="serif"
    />
    <TextView
        android:onClick="adr"
        android:id="@+id/address"
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:layout_margin="15dp"
        android:layout_below="@+id/study"
        android:text="Lives at Sanskriti Awass Boys Hostel Noida"
        android:textColor="#000"
        android:textSize="20sp"
        android:typeface="serif"
        />
        <TextView
            android:onClick="call"
            android:id="@+id/phone"
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            android:layout_margin="15dp"
            android:layout_below="@+id/email"
            android:text="Mobile : 8604609572"
            android:textColor="#000"
            android:textSize="20sp"
            android:typeface="serif"
            />
        <TextView
            android:onClick="mail"
            android:id="@+id/email"
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            android:layout_margin="15dp"
            android:layout_below="@+id/address"
            android:text="E-Mail : dheeraj.kotwani41@gmail.com"
            android:textColor="#000"
            android:textSize="20sp"
            android:typeface="serif"
            />

        <TextView
            android:id="@+id/skills"
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            android:text="SKILLS"
            android:layout_below="@id/phone"
            android:layout_marginTop="20dp"
            android:background="#9984C2"
            android:textStyle="bold"
            android:textSize="30dp"
            android:textAlignment="center"
            android:textColor="#fff"
            android:typeface="serif"
            />
        <LinearLayout
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:orientation="vertical"
            android:layout_below="@+id/skills"
            android:layout_centerHorizontal="true"
            android:layout_margin="15dp"
            >
            <TextView
                android:layout_height="wrap_content"
                android:layout_width="match_parent"
                android:text="C Language"
                android:textSize="18sp"
                android:textColor="#000"
                android:typeface="serif"
                android:textAlignment="center"
                />
            <TextView
                android:layout_height="wrap_content"
                android:layout_width="match_parent"
                android:text="C++ Language"
                android:textSize="18sp"
                android:textColor="#000"
                android:typeface="serif"
                android:textAlignment="center"
                />
            <TextView
                android:layout_height="wrap_content"
                android:layout_width="match_parent"
                android:text="Python"
                android:textSize="18sp"
                android:textColor="#000"
                android:typeface="serif"
                android:textAlignment="center"
                />
            <TextView
                android:layout_height="wrap_content"
                android:layout_width="match_parent"
                android:text="Android App Development"
                android:textSize="18sp"
                android:textColor="#000"
                android:typeface="serif"
                android:textAlignment="center"
                />


        </LinearLayout>


</RelativeLayout>
</ScrollView>