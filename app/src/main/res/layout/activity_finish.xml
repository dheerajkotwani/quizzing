<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".finish">
<ImageView
    android:layout_height="match_parent"
    android:layout_width="match_parent"
    android:src="@drawable/winn"
    android:scaleType="centerCrop"
    />
    <TextView
        android:id="@+id/congo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Congratulations!"
        android:textSize="40sp"
        android:textAlignment="center"
        android:typeface="serif"
        android:textColor="#004"
        android:layout_marginTop="300dp"
        android:layout_centerHorizontal="true"
        />
    <TextView
        android:layout_below="@+id/congo"
        android:id="@+id/congo1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="You Won!"
        android:textSize="40sp"
        android:textAlignment="center"
        android:typeface="serif"
        android:textColor="#004"
        android:layout_marginTop="6dp"
        android:layout_centerHorizontal="true"
        />

    <Button
        android:id="@+id/but"
        android:layout_below="@+id/congo1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/backgrnd1"
        android:layout_marginRight="40dp"
        android:layout_marginLeft="40dp"
        android:alpha="0.8"
        android:layout_marginTop="25dp"
        android:text="Play Again"
        android:textColor="#000"
        android:textSize="20sp"
        android:textStyle="bold"
        android:onClick="start"
        />
    <TextView
        android:id="@+id/text"
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:text="Developed by Dheeraj"
        android:layout_alignParentBottom="true"
        android:textColor="#fff"
        android:layout_centerHorizontal="true"
        android:textAlignment="center"
        android:layout_margin="5dp"
        android:textStyle="bold"
        android:typeface="monospace"
        />

    <LinearLayout
        android:id="@+id/lay2"
        android:layout_height="40dp"
        android:layout_width="wrap_content"
        android:orientation="horizontal"
        android:layout_centerHorizontal="true"
        android:layout_above="@id/text"
        >
        <ImageView
            android:onClick="call"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:src="@drawable/call"
            android:layout_margin="2dp"
            android:background="@drawable/backgroundbut"
            android:alpha="0.5"
            />
        <ImageView
            android:onClick="git"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:src="@drawable/index"
            android:layout_margin="2dp"
            android:alpha="0.5"
            android:background="@drawable/backgroundbut"
            />
        <ImageView
            android:onClick="mail"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:src="@drawable/images"
            android:layout_margin="2dp"
            android:background="@drawable/backgroundbut"
            android:alpha="0.5"
            />



    </LinearLayout>

</RelativeLayout>